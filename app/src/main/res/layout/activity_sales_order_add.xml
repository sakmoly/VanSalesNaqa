                        android:layout_height="@dimen/setting_edittext_height"
                        android:layout_marginTop="@dimen/setting_edittext_margin_top"
                        android:background="@drawable/button_background_shape">

                        <EditText
                            android:id="@+id/creation_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/Transparent"
                            android:paddingLeft="@dimen/setting_edittext_padding_left"
                            android:textSize="@dimen/setting_edittext_text_size" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_layout_margin_top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Date"
                        android:textSize="@dimen/setting_label_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/setting_edittext_height"
                            android:layout_marginTop="@dimen/setting_edittext_margin_top"
                            android:layout_weight=".3"
                            android:background="@drawable/button_background_shape">

                            <EditText
                                android:id="@+id/date_picker_result"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/Transparent"
                                android:paddingLeft="@dimen/setting_edittext_padding_left"
                                android:textSize="@dimen/setting_edittext_text_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/date_picker_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.7"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_calendar" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_layout_margin_top"
