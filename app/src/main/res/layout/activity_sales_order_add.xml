                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/Transparent"
                            android:paddingLeft="@dimen/setting_edittext_padding_left"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/setting_edittext_text_size" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
