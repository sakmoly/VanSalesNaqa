<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout

        android:id="@+id/completelayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/titlelayout"
        android:background="@drawable/rwbg"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">


        <LinearLayout
            android:id="@+id/offerly_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center"
            android:paddingLeft="30dp">

            <ImageView
                android:id="@+id/offerclickid"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:src="@drawable/ic_list_arrow"/>

        </LinearLayout>



        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:fontFamily="serif"
            android:gravity="left|center_vertical"
            android:text="v guard"
            android:textColor="@color/Black"
            android:textSize="14dp"
            android:textStyle="bold" />


        <!--<TextView-->

        <!--android:id="@+id/place_id"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginTop="2dp"-->
        <!--android:layout_weight=".9"-->
        <!--android:fontFamily="serif"-->
        <!--android:gravity="center"-->
        <!--android:text="ernakulam"-->
        <!--android:textColor="@color/grey"-->
        <!--android:textSize="12dp" />-->


        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center"
            android:paddingRight="25dp">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/ic_right_arrow_angle" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Light_gray"/>

</LinearLayout>