<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CollectionActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/titleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/White"
            android:textSize="16sp"
            android:textStyle="bold"

            />

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receipt no"
                        android:textSize="@dimen/setting_label_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_edittext_height"
                        android:layout_marginTop="@dimen/setting_edittext_margin_top"
                        android:background="@drawable/button_background_shape">

                        <TextView
                            android:id="@+id/payment_no"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/Transparent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/setting_edittext_padding_left"
                            android:textSize="@dimen/setting_edittext_text_size" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_layout_margin_top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Creation"
                        android:textSize="@dimen/setting_label_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_edittext_height"
                        android:layout_marginTop="@dimen/setting_edittext_margin_top"
                        android:background="@drawable/button_background_shape">

                        <TextView
                            android:id="@+id/creation_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/Transparent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/setting_edittext_padding_left"
                            android:textSize="@dimen/setting_edittext_text_size" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_layout_margin_top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer"
                        android:textSize="@dimen/setting_label_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_edittext_height"
                        android:layout_marginTop="@dimen/setting_edittext_margin_top"
                        android:background="@drawable/button_background_shape"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/customer_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/Transparent"
                            android:paddingLeft="@dimen/setting_edittext_padding_left"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/setting_edittext_text_size" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_layout_margin_top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mode Of Payment"
                        android:textSize="@dimen/setting_label_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_edittext_height"
                        android:layout_marginTop="@dimen/setting_edittext_margin_top"
                        android:background="@drawable/button_background_shape"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/mode_payment_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/Transparent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/setting_edittext_padding_left"
                            android:textSize="@dimen/setting_edittext_text_size" />

                    </LinearLayout>

                </LinearLayout>

