                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_layout_margin_top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paid To"
                        android:textSize="@dimen/setting_label_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_edittext_height"
                        android:layout_marginTop="@dimen/setting_edittext_margin_top"
                        android:background="@drawable/button_background_shape">

                        <TextView
                            android:id="@+id/paid_to"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/Transparent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/setting_edittext_padding_left"
                            android:textSize="@dimen/setting_edittext_text_size" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/reference_no_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_layout_margin_top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reference No"
                        android:textSize="@dimen/setting_label_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_edittext_height"
                        android:layout_marginTop="@dimen/setting_edittext_margin_top"
                        android:background="@drawable/button_background_shape">

                        <TextView
                            android:id="@+id/reference_no"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/Transparent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/setting_edittext_padding_left"
                            android:textSize="@dimen/setting_edittext_text_size" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reference_date_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_layout_margin_top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reference Date"
                        android:textSize="@dimen/setting_label_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_edittext_height"
                        android:layout_marginTop="@dimen/setting_edittext_margin_top"
                        android:background="@drawable/button_background_shape">

                        <TextView
                            android:id="@+id/reference_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/Transparent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/setting_edittext_padding_left"
                            android:textSize="@dimen/setting_edittext_text_size" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_layout_margin_top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Received Amount"
                        android:textSize="@dimen/setting_label_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_edittext_height"
                        android:layout_marginTop="@dimen/setting_edittext_margin_top"
                        android:background="@drawable/button_background_shape">

                        <TextView
                            android:id="@+id/received_amount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/Transparent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/setting_edittext_padding_left"
                            android:textSize="@dimen/setting_edittext_text_size" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/cancel_request"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_backd"
                        android:text="CANCEL"
                        android:textColor="@color/White"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/next_request"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_backd"
                        android:text="SAVE"
                        android:visibility="gone"
                        android:textColor="@color/White"
                        android:textSize="15dp" />

                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>