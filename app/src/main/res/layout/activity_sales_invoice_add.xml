                     </LinearLayout>-->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/return_against_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/setting_layout_margin_top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Return Against"
                        android:textSize="@dimen/setting_label_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_edittext_height"
                        android:layout_marginTop="@dimen/setting_edittext_margin_top"
                        android:background="@drawable/button_background_shape">

                        <TextView
                            android:id="@+id/return_against_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/Transparent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/setting_edittext_padding_left"
                            android:textSize="@dimen/setting_edittext_text_size" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_layout_margin_top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Posting Time"
                        android:textSize="@dimen/setting_label_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_edittext_height"
                        android:layout_marginTop="@dimen/setting_edittext_margin_top"
                        android:background="@drawable/button_background_shape">

                        <TextView
                            android:id="@+id/posting_time_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/Transparent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/setting_edittext_padding_left"
                            android:textSize="@dimen/setting_edittext_text_size" />

                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_layout_margin_top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Posting Date"
                        android:textSize="@dimen/setting_label_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_edittext_height"
                        android:layout_marginTop="@dimen/setting_edittext_margin_top"
                        android:background="@drawable/button_background_shape">

                        <TextView
                            android:id="@+id/posting_date_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/Transparent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/setting_edittext_padding_left"
                            android:textSize="@dimen/setting_edittext_text_size" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_edittext_height"
                    android:layout_marginTop="15dp"
                    android:background="@color/Light_blue"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="15dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/cash_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cash"
                            android:textSize="@dimen/setting_label_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cash_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:gravity="center_vertical|right">

                        <ImageView
                            android:id="@+id/cash_image"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_switch_off" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_layout_margin_top"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textSize="@dimen/setting_label_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_edittext_height"
                        android:layout_marginTop="@dimen/setting_edittext_margin_top"
                        android:background="@drawable/button_background_shape">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/Transparent"
                            android:paddingLeft="@dimen/setting_edittext_padding_left"
                            android:textSize="@dimen/setting_edittext_text_size" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/customer_visit"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_backd"
                        android:text="CUSTOMER VISIT"
                        android:textColor="@color/White"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/cancel_request"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_backd"
                        android:text="CANCEL"
                        android:textColor="@color/White"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/next_request"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_backd"
                        android:text="NEXT"
                        android:textColor="@color/White"
                        android:textSize="15dp" />

                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
