                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_edittext_height"
                    android:layout_marginTop="15dp"
                    android:background="@color/Light_blue"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="15dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Return"
                            android:textSize="@dimen/setting_label_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/isreturn_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:gravity="center_vertical|right">

                        <ImageView
                            android:id="@+id/isreturn_image"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_switch_off" />

                    </LinearLayout>


                    <!-- <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Is Return"
                         android:textSize="@dimen/setting_label_text_size" />

                     <LinearLayout
                         android:layout_width="match_parent"
