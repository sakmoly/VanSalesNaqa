<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardview:cardElevation="4dp"
    cardview:cardCornerRadius="3dp"
    app:cardBackgroundColor="@color/White"
    android:layout_margin="5dp"
    cardview:cardPreventCornerOverlap="false"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:id="@+id/rowBG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/edit"
                android:layout_width="@dimen/swipeWidth"
                android:layout_height="match_parent"
                android:background="@color/swipeoption_green"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="?android:selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_edit_customer"
                        android:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Edit"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/delete"
                android:layout_width="@dimen/swipeWidth"
                android:layout_height="match_parent"
                android:background="@color/swipeoption_purple"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="?android:selectableItemBackground"
                    android:gravity="center_vertical|left"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_horizontal"
                        android:tint="@android:color/white"
                        android:src="@drawable/ic_delete_customer"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Delete"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowFG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:visibility="visible">


            <LinearLayout
                android:layout_weight=".4"
                android:weightSum="4"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="25dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/item_asset_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Item 1"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/Black"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/item_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Item 1"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/Black"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/item_code_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Item 1"
                    android:gravity="center_vertical"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/item_qty_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Item 1"
                    android:gravity="center_vertical"
                    android:textSize="13sp"/>

            </LinearLayout>

           <!-- <LinearLayout
                android:layout_weight="1.6"
                android:gravity="center"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    />

            </LinearLayout>-->

            <LinearLayout
                android:layout_weight="1.6"
                android:gravity="center"
                android:paddingRight="10dp"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/delete_item"
                    android:layout_weight="1"
                    android:paddingBottom="15dp"
                    android:gravity="right|bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_letter_x"
                        />
                </LinearLayout>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/total_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingRight="4dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>